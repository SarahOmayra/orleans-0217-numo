{% extends 'layout.html.twig' %}
{% block body %}

    <div class="container-fluid bg-1 text-center">

        <h3 class="margin"></h3>
        <div class="row imgHeader">
            <div class="col-sm-offset-3 col-sm-6">
                <img class="img-responsive imgHeader" src="{{ asset('img/NUMO.png') }}">
                <a href="{{ path('event_list_published') }}" class="btn btn-default btn-lg btnwhite">CONSULTER L'AGENDA</a>
            </div>
        </div>
    </div>

    <div class="container mailChimp">
        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
            <form action="//num-o.us16.list-manage.com/subscribe/post?u={{ mailChimpApi }};id=de68ca6632" method="post"
                  id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank"
                  novalidate>
                <div id="mc_embed_signup_scroll">
                    <label for="mce-EMAIL" class="font-lato">S'INSCRIRE A NOTRE NEWSLETTER</label>
                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Adresse email"
                           required>
                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div class="mailChimpStyle" aria-hidden="true"><input type="text"
                                                                          name="b_116816a1a91c3fc902cbe3388_de68ca6632"
                                                                          tabindex="-1" value=""></div>
                    <div class="clear"><input type="submit" value="INSCRIPTION" name="subscribe"
                                              id="mc-embedded-subscribe" class="button"></div>
                </div>
            </form>
        </div>
        <!--End mc_embed_signup-->

    </div>

    <div class="container-fluid bg-2 text-center zoneRed">
        <div class="col-lg-offset-5 col-lg-2">
            <h3 class="margin titreindex font-lato">Num'0</h3>
        </div>
        <div class="col-lg-offset-3 col-lg-6">
            <p class="asso">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore
                et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
                aliquip ex ea commodo consequat.
            </p>
            <a href="{{ path('become_adherent') }}" class="btn btn-lg btnwhite asso">
                DEVENEZ ADHERENT
            </a>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row index_list-events">
            {% for event in events %}
                {% if loop.index < 7 %}
                    <div class="col-lg-4 col-sm-6">
                        <a href="{{ path('event_show_published', {'id': event.id}) }}">
                            <div class="thumbnail">
                                <img class="imageEvents" src="{{ event.image }}" alt="{{ event.title }}">
                                <div class="caption">
                                    <h3>{{ event.title }}</h3>
{#
                                    <h4>{{ event.newDates[0].evtDate|localizeddate("medium", "none", "locale", null, "cccc d LLLL yyyy") }}</h4>
#}
                                    <p>{{ event.description }}</p>
                                    <p>{{ event.address }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="container-fluid text-center ">
        <div class="row moreEvents zoneBlue">
            <div class="col-lg-offset-3 col-lg-6">
                <h3 class="margin">Les événements</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                    labore</p>
                <a href="{{ path('event_list_published') }}" class="btn btn-default   btn-lg">Voir plus</a>
            </div>
        </div>
    </div>

    <div class="footer-top text-center">
        <h3>Nos partenaires</h3>

        <div class="container">
            <div class="row text-center partnaire">
                {% for partner in partners %}
                    {% if partners|length == 1 %}
                        <div class="col-xs-12">
                            <a href="{{ partner.webUrl }}" class="thumbnail thumbnail-div">
                                <img src="{{ asset('uploads/users/' ~ partner.imageUrl ) }}" class="img-responsive partnaireImg" alt="{{ partner.name }}">
                            </a>
                        </div>
                    {% elseif partners|length == 2 %}
                        <div class="col-md-6 col-xs-6">
                            <a href="{{ partner.webUrl }}" class="thumbnail thumbnail-div">
                                <img src="{{ asset('uploads/users/' ~ partner.imageUrl ) }}" class="img-responsive partnaireImg" alt="{{ partner.name }}">
                            </a>
                        </div>
                    {% elseif (partners|length == 3) or (partners|length == 5) or (partners|length == 6) %}
                        <div class="col-md-4 col-xs-4">
                            <a href="{{ partner.webUrl }}" class="thumbnail thumbnail-div">
                                <img src="{{ asset('uploads/users/' ~ partner.imageUrl ) }}" class="img-responsive partnaireImg" alt="{{ partner.name }}">
                            </a>
                        </div>
                    {% elseif (partners|length == 4) or (partners|length == 7) or (partners|length == 8) %}
                        <div class="col-md-3 col-xs-3">
                            <a href="{{ partner.webUrl }}" class="thumbnail thumbnail-div">
                                <img src="{{ asset('uploads/users/' ~ partner.imageUrl ) }}" class="img-responsive partnaireImg" alt="{{ partner.name }}">
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>






