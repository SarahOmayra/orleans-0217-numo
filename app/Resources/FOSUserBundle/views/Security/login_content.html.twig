
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}


    <div class="container-fluid bg-1 text-center">

        <h3 class="margin"></h3>
        <div class="row text-center connection">
            <h2 class="title-view">Connexion</h2>
            <div class="separation barreGreen"></div>

            {% if error %}
                <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal text-center">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label class="col-sm-2 col-sm-offset-3 control-label" for="username">Adresse e-mail</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-offset-3 control-label" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="password" id="password" name="_password" required="required">
                    </div>
                </div>

                <div class="col-sm-6 col-sm-offset-3 btn-login">
                    <input type="submit" class="col-sm-offset-1 btn btn-default btn-xl sr-button" id="_submit" name="_submit"
                           value="{{ 'security.login.submit'|trans }}" />
                    <a class="forgot-password" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                </div>


            </form>

        </div>
    </div>

{% endblock %}