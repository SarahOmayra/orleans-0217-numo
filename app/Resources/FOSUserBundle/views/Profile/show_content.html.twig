{% extends 'layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}


    <div class="container-fluid profileUser">

        <div class="col-xs-12 text-center">
            <div class="separation"></div>
            <h1>{{ user.name }} {{ user.firstname }}</h1>
            <div class="separation"></div>
        </div>

        <div class="row">
            <div class="col-lg-offset-1 col-lg-2">
                {% if user.imageUrl == null %}
                    <img src="{{ asset('img/person_placeholder.png') }}" alt="placeholder" style="height: 231px">
                {% else %}
                    <img src="{{ asset('uploads/users/' ~ user.imageUrl.filename) }}" alt="{{ user.name }}"
                         style="height: 70px">
                {% endif %}
            </div>

            <div class="col-lg-5">
                <div class="row">
                    <h2>{{ user.website }}</h2>
                    <p>{{ user.description }}</p>
                    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default">Editer</a>
                    <a href="{{ path('fos_user_change_password') }}" class="btn btn-default">Modifier le mot de passe</a>

                    {% if not is_granted('ROLE_ADHERENT') %}
                        <a href="" class="btn btn-default">Devenir Adhérent</a>
                    {% endif %}
                </div>
            </div>
        </div>


        {% if is_granted('ROLE_ADHERENT') %}
            <div class="row iconContact">
                {% if user.facebook != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <a target="_blank" href="{{ user.facebook }}">
                            <img src="{{ asset('/img/rs-facebook.png') }}" alt="facebook" class="rs-button"/>
                        </a>
                    </div>
                    <div class="col-lg-1">
                        <h3>{{ user.facebook }}</h3>
                    </div>
                {% endif %}

                {% if user.twitter != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <a href="{{ user.twitter }}" target="_blank">
                            <img src="{{ asset('/img/rs-twitter.png') }}" alt="twitter" class="rs-button"/>
                        </a>
                    </div>
                    <div class="col-lg-1">
                        <h3><a href="{{ user.twitter }}" target="_blank"></a>{{ user.twitter }}</h3>
                    </div>
                {% endif %}

                {% if user.linkedin != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <a href="{{ user.linkedin }}" target="_blank">
                            <img src="{{ asset('/img/rs-linkedin.png') }}" alt="linkedin" class="rs-button"/>
                        </a>
                    </div>
                    <div class="col-lg-1">
                        <h3>{{ user.linkedin }}</h3>
                    </div>
                {% endif %}
            </div>

            <div class="row iconContact">
                {% if user.email != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <img src="{{ asset('/img/mail.png') }}" alt="email" class="rs-button"/>
                    </div>
                    <div class="col-lg-1">
                        <h3>{{ user.email }}</h3>
                    </div>
                {% endif %}

                {% if user.phone != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <img src="{{ asset('/img/tel.png') }}" alt="telephone" class="rs-button"/>
                    </div>
                    <div class="col-lg-2">
                        <h3>{{ user.phone }}</h3>
                    </div>
                {% endif %}

                {% if user.webSite != null %}
                    <div class="col-lg-offset-1 col-lg-1">
                        <img src="{{ asset('/img/internet.png') }}" alt="site web" class="rs-button"/>
                    </div>
                    <div class="col-lg-2">
                        <h3>{{ user.webSite }}</h3>
                    </div>
                {% endif %}
            </div>

            <div class="col-xs-12 text-center">
                <div class="separation"></div>
            </div>

            <div class="text-center">
                <h2>Mes événements</h2>
            </div>
            <div class="container-fluid">
                <div class="row">
                    {#{% for event in events %}#}
                    <div class="col-lg-4 col-sm-6">
                        <a href="" class="portfolio-box">
                            <img class="imageEvents img-responsive" src="https://www.w3schools.com/w3images/fjords.jpg"
                                 class="img-responsive" alt="">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        <h2></h2>
                                    </div>
                                    <div class="project-name">

                                    </div>
                                    <p></p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <a href="" class="portfolio-box">
                            <img class="imageEvents img-responsive" src="https://www.w3schools.com/w3images/fjords.jpg"
                                 class="img-responsive" alt="">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        <h2></h2>
                                    </div>
                                    <div class="project-name">

                                    </div>
                                    <p></p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <a href="" class="portfolio-box">
                            <img class="imageEvents img-responsive" src="https://www.w3schools.com/w3images/fjords.jpg"
                                 class="img-responsive" alt="">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        <h2></h2>
                                    </div>
                                    <div class="project-name">

                                    </div>
                                    <p></p>
                                </div>
                            </div>
                        </a>
                    </div>
                    {#{% endfor %}#}
                </div>
            </div>

        {% endif %}

    </div>
{% endblock %}




