{% extends 'layout.html.twig' %}

{% block body %}
<div class="row">

    {% for event in events %}
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img class="thumbnail" src="{{ event.image }}" alt="{{ event.title.fr }}" />
                <div class="caption">
                    <h3>{{ event.title.fr }}</h3>
                    <p>{{ event.description.fr }}</p>
                    {% set eventUrl = 'https://openagenda.com/' ~ agendaSlug ~ '/events/' ~ event.link|split('/')|last %}
                    <p><a href="{{ eventUrl }}" class="btn btn-primary" role="button" target="_blanc">Voir sur Open Agenda</a></p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
